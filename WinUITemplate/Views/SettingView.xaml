<reactiveUi:ReactiveUserControl
    x:TypeArguments="viewModels:SettingViewModel"
    x:Class="WinUITemplate.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:WinUITemplate.ViewModels;assembly=WinUITemplate.ViewModels"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:controls="http://schemas.modernwpf.com/2019"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    d:Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">
    <Grid Margin="20,25,0,0">
        <ScrollViewer>
            <GroupBox Header="View">
                <StackPanel>
                    <controls:RadioButtons x:Name="ThemeRadioButtons"
                                           Header="Theme">
                        <RadioButton Content="System" d:IsChecked="True" />
                        <RadioButton Content="Light" />
                        <RadioButton Content="Dark" />
                    </controls:RadioButtons>
                </StackPanel>
            </GroupBox>
        </ScrollViewer>
    </Grid>
</reactiveUi:ReactiveUserControl>
